{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-react"],
  "jsRules": {},
  "rules": {
    "no-var-requires": true,
    "quotemark": [true, "single", "avoid-escape"],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "ordered-imports": [true, {"import-sources-order": "any", "named-imports-order": "any"}],
    "object-literal-sort-keys": false,
    "variable-name": [true, "ban-keywords", "check-format"],
    "no-console": true,
    "max-line-length": [true, 200],
    "max-classes-per-file": [true, 2],
    "whitespace": [true, "check-module"],
    "no-trailing-whitespace": false,
    "no-namespace": false,
    "semicolon": [true, "always"],
    "strict": false,
    "triple-equals": true,
    "curly": true,
    "no-eval": true,
    "prefer-object-spread": true,
    "no-return-await": true,
    "no-for-in-array": true,
    "no-string-literal": true,
    "no-unused-variable": true,
    "no-unused-expression": true,
    "no-empty-interface": false,
    "no-any": true,
    "use-isnan": true,
    "array-type": [true, "array"],
    "arrow-return-shorthand": true,
    "class-name": true,
    "no-angle-bracket-type-assertion": true,
    "no-boolean-literal-compare": true,
    "no-unnecessary-callback-wrapper": true,
    "prefer-switch": [true, {"min-cases": 4}],
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "member-ordering": [true, {"order": "fields-first"}],
    "no-shadowed-variable": false,
    "arrow-parens": [true, "ban-single-arg-parens"],

    "jsx-self-close": true,
    "jsx-space-before-trailing-slash": true,
    "jsx-wrap-multiline": true,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": true,
    "jsx-no-bind": true,
    "jsx-curly-spacing": [true, "always"],
    "jsx-boolean-value": [true, "never"],
    "jsx-alignment": true
  }
}
